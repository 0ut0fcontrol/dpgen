# Input file for Stack Fault Energy surface of Aluminum
# Phillip Spear, 2012

# ------------------------ INITIALIZATION ----------------------
units		metal
dimension	3
boundary	p p s
atom_style	atomic
variable	latparam1	equal 4.04
variable	x_displace	equal -1*(${latparam1}/sqrt(6))
variable	xdim		equal ${latparam1}*sqrt(6)/2*10
variable	ydim		equal ${latparam1}*sqrt(2)/2*10
# ----------------------- ATOM DEFINITION ----------------------
lattice		fcc ${latparam1}
region		1 block 0 ${xdim} 0 ${ydim} 0 20 
region		2 block 0 ${xdim} 0 ${ydim} 20 40
region		whole block 0 ${xdim} 0 ${ydim} 0 200 units box
create_box	1 whole
lattice		fcc ${latparam1} orient x 1 1 2 orient y -1 1 0 orient z -1 -1 1
create_atoms	1 region 1
lattice		fcc ${latparam1} orient x 1 1 2 orient y -1 1 0 orient z -1 -1 1
create_atoms	1 region 2
mass		1 27
# ----------------------- FORCE FIELDS -----------------------
include		potential.mod
# ------------------------- before disp -----------------------
compute		peratom all pe/atom
compute		eatoms all reduce sum c_peratom
thermo		1
thermo_style	custom step pe pxx pyy pzz c_eatoms
dump		1 all custom 10 dump.relax type xs ys zs c_peratom fx fy fz

fix		1 all setforce 0 0 NULL
min_style	cg
minimize	1e-10 1e-10 1000 1000

run		0
variable	E equal "c_eatoms"
variable	Eo equal $E

# ------------------------- SETTINGS --------------------------
group		top region 1
group		bot region 2

# ------------------------- Displacement -----------------------
displace_atoms	bot move ${x_displace} 0.0 0.0 units box

fix		1 all setforce 0 0 NULL
min_style	cg
minimize	1e-10 1e-10 1000 1000

run		0
variable	Ef equal "c_eatoms"
variable	Cf equal 1.60217657e-16
variable	A equal (${xdim}*${ydim})*1e-20
variable	SFE equal ((${Ef}-${Eo})*${Cf})/${A}

# SIMULATION DONE
#print ${x}
print "All done"
print "Initial energy of atoms = ${Eo} eV"
print "Final energy of atoms = ${Ef} eV"
print "Stacking-fault energy = ${SFE} mJ/m^2"
