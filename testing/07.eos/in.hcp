units		metal
dimension	3
boundary	p p p
atom_style	atomic
variable	latt_a		equal 4.04
variable	box_a		equal ${latt_a}*sqrt(2)/2
variable        GPa2bar		equal 1e4
variable        B0		equal 80
variable        bp		equal 0
variable	xx		equal SCALE		# scale wrt. the equilibrum state
variable        yeta		equal 1.5*(${bp}-1)
variable        Px0		equal 3*${B0}*(1-${xx})/${xx}^2*exp(${yeta}*(1-${xx})) # bp=4
variable        Px		equal ${Px0}*${GPa2bar}

lattice		hcp ${box_a}
region		whole block 0 1 0 1 0 1
create_box	1 whole
create_atoms	1 region whole
mass		1 27

include		potential.mod

thermo		1
thermo_style	custom step pe pxx pyy pzz lx ly lz

#----Relax system-----------------------------------------------
variable	mini_etol	equal 1e-12
variable	mini_ftol	equal 1e-6
reset_timestep	0
fix		1 all box/relax aniso ${Px} couple xy 
dump		1 all atom 10 dump.atom
min_style	cg
minimize	${mini_etol} ${mini_ftol} 5000 5000
unfix		1
undump		1

#---------------------------------------------------------------
run		0
variable	natoms equal count(all)
variable	petotal equal "pe"
variable	latt_a equal "lx"
variable	epa equal ${petotal}/${natoms}
variable	lx equal "lx"
variable	ly equal "ly"
variable	lz equal "lz"
variable	vpa equal ${lx}*${ly}*${lz}/${natoms}
variable	cella equal "cella"
variable	cellc equal "cellc"
variable	coa equal ${cellc}/${cella}

print "ENER_PER_ATOM ${epa}"
print "VOLM_PER_ATOM ${vpa}"
print "COA ${coa}"



